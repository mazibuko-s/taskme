// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id    String @id @default(dbgenerated()) @map("_id") @db.ObjectId
  name  String
  email String @unique
  tasks Task[] @relation("userToTask")
}

model Task {
  id         String   @id @default(dbgenerated()) @map("_id") @db.ObjectId
  name       String
  status     String
  priority   Int
  dueDate    DateTime
  ownerId    String   @map("ownerId")
  owner      User     @relation("userToTask", fields: [ownerId], references: [id])
  assignedId String?  @map("assignedId")
  assigned   User?    @relation("userToTask", fields: [assignedId], references: [id])
}
